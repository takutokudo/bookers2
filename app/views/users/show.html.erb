<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'books/userinfo', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-lg-9">
      <!-- ユーザーの投稿一覧 -->
      <h1>Books</h1>
      <table class="table">
        <thead>
        	<tr>
        		<th colspan="1"></th>
        		<th>Title</th>
        		<th>Opinion</th>
        	</tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
					      <%= book.title %>
					    <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>