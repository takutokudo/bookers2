<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'books/userinfo', user: current_user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-lg-9">
      <h1>Users</h1>
      <table class="table">
        <thead>
        	<tr>
        		<th>image</th>
        		<th>name</th>
        		<th colspan="1"></th>
        	</tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>