<h1>NEW BOOK</h1>

<% if book.errors.any? %>
  <%= book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- form_with部分 -->
<%= form_with model: book, url: '/books', method: :post do |f| %>
  <h4>TITLE</h4>
  <%= f.text_field :title %>

  <h4>BODY</h4>
  <%= f.text_area :body %>

  <br>

  <%= f.submit 'Create Book',class: "btn btn-success" %>
<% end %>