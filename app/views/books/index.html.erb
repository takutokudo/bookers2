<h1>Books</h1>

<table border="0">
  <thead>
		<tr>
			<th colspan="1"></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
			  <td><%= image_tag 'sample-author1.jpg' %></td>
				<td>
				  <%= link_to book_path(book.id) do %>
				    <%= book.title %>
				  <% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
			<tr>
			  <td><%= book.user.name %></td>
			</tr>
		<% end %>
	</tbody>
</table>