<div>
  <%= flash[:notice] %>
</div>

<h1>Book detail</h1>
<table border="0">
  <tr>
    <td><%= image_tag 'sample-author1.jpg' %></td>
    <td>
		  <%= link_to book_path(@book.id) do %>
		   <%= @book.title %>
		  <% end %>
		</td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
      <% end %>
    </td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td><%= @book.user.name %></td>
  </tr>