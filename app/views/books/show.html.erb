<div>
  <%= flash[:notice] %>
</div>

<%= render 'userinfo', user: @book.user %>
<%= render 'new', book: @new %>

<h1>Book detail</h1>
<table border="0">
  <tbody>
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
    <td>
		  <%= link_to book_path(@book.id) do %>
		   <%= @book.title %>
		  <% end %>
		</td>
    <td><%= @book.body %></td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
      <% end %>
    </td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to user_path(@book.user.id) do %>
        <%= @book.user.name %>
      <% end %>
    </td>
  </tr>
  </tbody>
</table>