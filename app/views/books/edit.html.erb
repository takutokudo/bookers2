<h1>Editing Book</h1>
<%= render 'varidate', varidate: @book %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book', class: "btn btn-saccess" %>
  <br>
  <p><%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %></p>
<% end %>